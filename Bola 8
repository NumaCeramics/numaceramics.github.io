<body>

<div class="ball-container">
  <div class="ball" id="ball">
    <div class="triangle"></div>
    <div class="triangle-text" id="text">PREGUNTA...</div>
  </div>
</div>

<button onclick="shakeBall()">Consultar</button>

<audio id="misterio" src="audio/misterio.mp3"></audio>

<script>
const respuestas = [
  "SÍ",
  "NO",
  "PUEDE SER",
  "INTÉNTALO",
  "COMO VES",
  "CLARO",
  "YA VES"
];

function shakeBall() {
  const ball = document.getElementById("ball");
  const text = document.getElementById("text");
  const audio = document.getElementById("misterio");

  text.textContent = "";
  ball.classList.add("shake");

  audio.currentTime = 0;
  audio.play();

  // 3.5 segundos exactos = duración útil del audio
  setTimeout(() => {
    ball.classList.remove("shake");
    const r = respuestas[Math.floor(Math.random() * respuestas.length)];
    text.textContent = r;
  }, 3500);
}
</script>

